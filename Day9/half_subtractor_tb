module half_subtractor_tb;
reg A, B;
wire D, Bo;
half_subtractor uut (
    .A(A),
    .B(B),
    .D(D),
    .Bo(Bo)
);
initial begin
    $display("A B | D Bo");
    $display("----------");

    A = 0; B = 0; #10;
    $display("%b %b | %b %b", A, B, D, Bo);

    A = 0; B = 1; #10;
    $display("%b %b | %b %b", A, B, D, Bo);

    A = 1; B = 0; #10;
    $display("%b %b | %b %b", A, B, D, Bo);

    A = 1; B = 1; #10;
    $display("%b %b | %b %b", A, B, D, Bo);
    $finish;
end
endmodule
